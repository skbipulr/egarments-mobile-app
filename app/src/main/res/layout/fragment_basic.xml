<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    tools:context=".BasicFragment">


        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/quizimage"
            android:src="@drawable/p"
            android:layout_height="match_parent" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Basic"

                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="18dp"/>

            <TextView
                android:textColor="@color/white"
                android:layout_margin="@dimen/text_margin_top"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Garments buyer and seller"
                android:textSize="@dimen/small_text_size"/>

            <TextView
                android:textColor="@color/white"
                android:layout_margin="@dimen/text_margin_top"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Garments buyer and seller"
                android:textSize="@dimen/small_text_size"/>

            <TextView
                android:textColor="@color/white"
                android:layout_margin="@dimen/text_margin_top"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Garments buyer and seller"
                android:textSize="@dimen/small_text_size"/>

            <TextView
                android:textColor="@color/white"
                android:layout_margin="@dimen/text_margin_top"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Garments buyer and seller"
                android:textSize="@dimen/small_text_size"/>


            <info.hoang8f.widget.FButton
                android:id="@+id/btnSelectBasic"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_margin="8dp"
                android:text="Select Basic"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorPrimary"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:cornerRadius="10dp"
                app:fButtonColor="@color/colorPrimary"
                app:shadowEnabled="true"
                android:layout_marginTop="3dp"
                app:shadowHeight="1dp" />
        </LinearLayout>




</androidx.cardview.widget.CardView>